<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/line_height_20dp"
        android:text="底部下载"/>
    <FrameLayout
        android:id="@+id/rl_dow1"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="@dimen/line_height_20dp"
        android:layout_marginRight="@dimen/line_height_20dp"
        android:layout_marginTop="@dimen/line_height_5dp"
        >
        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/rpb1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:rcProgress="0"
            app:rcMax="100"
            app:rcRadius="5dp"
            app:rcBackgroundPadding="0dp"
            app:rcReverse="false"
            app:rcProgressColor="#99CCFF"
            app:rcBackgroundColor="#666666"
            app:rcSecondaryProgressColor="#00000000"
             />
        <TextView
            android:id="@+id/proText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/line_height_20dp"
        android:text="顶部下载"/>
    <FrameLayout
        android:id="@+id/rl_dow2"
        android:layout_width="60dip"
        android:layout_height="35dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/line_height_20dp"
        android:layout_marginRight="@dimen/line_height_20dp"
        android:layout_marginTop="@dimen/line_height_5dp"

        >
        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/rpb2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:rcProgress="0"
            app:rcMax="100"
            app:rcRadius="5dp"
            app:rcBackgroundPadding="0dp"
            app:rcReverse="false"
            app:rcProgressColor="#99CCFF"
            app:rcBackgroundColor="#666666"
            app:rcSecondaryProgressColor="#00000000"
            />
        <TextView
            android:id="@+id/proText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前往下一个界面"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/line_height_20dp"
        android:textSize="@dimen/line_height_20dp"/>


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
