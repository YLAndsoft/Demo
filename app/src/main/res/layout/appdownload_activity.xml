<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@color/system_bar_color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用下载"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <!-- 第一个APP -->
    <LinearLayout
        android:id="@+id/ll_oneApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dip"
        >

        <ImageView
            android:id="@+id/app_item_icon"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_marginLeft="5dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/app_item_appname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王者荣耀"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/app_item_appBrief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="火爆全球的5v5公平对战手游"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/app_item_appInstallCount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.1亿下载"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/app_item_appsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.2MB"
                    android:layout_marginLeft="5dip"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <com.fyl.demo.ui.views.FlikerProgressBar
            android:id="@+id/flikerbar"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/line_height_20dp"
            app:textSize="12sp"
            app:radius="5dp"
            app:loadingColor="#40c4ff"
            app:stopColor="#ff9800"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="#f5f5f5"
        />


</LinearLayout>
