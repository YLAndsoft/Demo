<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="0"
                android:centerColor="#D2D7D3"
                android:centerY="0.75"
                android:endColor="#D2D7D3"
                android:startColor="#D2D7D3" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="#079520"
                    android:centerY="0.75"
                    android:endColor="@color/start_download_secondary"
                    android:startColor="@color/start_download_secondary" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/start_download_progress"
                    android:startColor="@color/start_download_progress" />
            </shape>
        </clip>
    </item>

</layer-list>